<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exit_dialog_bk"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exit_exitTextView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="是否退出程序?"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/exit_cancel"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/exit_cancel_btn_click"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/exit_ok"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/exit_ok_btn_click"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>